
<div class="adquery-edit">
    <div class="popup">
        <div class="colored-header light-blue-container text-center">
            <div class="text">Запрос на подверждение</div>
        </div>
        <div class="popup-content">
            <div class="messages-item">
                <div class="flex-container">
                    <div class="messages-photo">
                        {% if adQuery.user.photo %}
                            <img src="{{photo_path}}{{adQuery.user.photo}}" >
                        {%else%}
                            <img class='no-avatar'  src="{{ asset('bundles/app/img/avatar.png') }}" >
                        {%endif%}
                    </div>
                    <div class="messages-content">
                        <div class="user-name opacity-text message-row">{{ adQuery.user }}</div>
                        <div class="query-text message-row">{{ adQuery.queryText }}</div>
                    </div>
                </div>
                <div class="text-buttons flex-container">
                    {{ form_start(confirm_form) }}
                    <button type="submit" class="green-href" >
                        
                        <div>Подтвердить</div>
                    </button>
                    {{ form_end(confirm_form) }}
                    {{ form_start(delete_form) }}
                    <button type="submit" class="red-href" >
                        <div>Отклонить</div>
                    </button>
                    {{ form_end(delete_form) }}
                </div>
            </div>

        </div>


    </div>
</div>




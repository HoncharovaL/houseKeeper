{% extends 'base.html.twig' %}

{% block body %}
    <div class="wide-container">
        {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="flex-container">

            <div class="photo-block">
                {% if user.photo %}
                {% else %}
                    <img class="no-avatar" src="{{ asset('bundles/app/img/avatar.png') }}">
                {% endif %}
                {{ form_widget(edit_form.photoFile)}}
            </div>
            <div class="info-block white-container">
                <div class="underlined-block form-block">
                    <div class="surname">{{ form_row(edit_form.surname)}}</div>
                    <div class="name">{{ form_row(edit_form.name)}}</div>  
                    <div class="patronymic">{{ form_row(edit_form.patronymic)}}</div>
                    <div class="phone">{{ form_row(edit_form.phone)}}</div>
                </div>
                <div class="underlined-block form-block">
                    <div class="education">{{ form_row(edit_form.education)}}</div>
                    <div class="university">{{ form_row(edit_form.university)}}</div>
                    <div class="experience">{{ form_row(edit_form.experience)}}</div>
                </div>
                <div class="underlined-block full-size-field form-block">
                    <div class="about">{{ form_widget(edit_form.about, {'attr': {'placeholder': edit_form.about.vars.label} })}}</div>
                </div>
                <div class="text-buttons">
                    <button type="submit" class="blue-href right-block" >
                        <div class="left-block big-text">Сохранить</div>
                    </button> 
                </div>
            </div>

        </div>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
